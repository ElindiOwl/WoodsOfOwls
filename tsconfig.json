{
  "include": [
    "src",
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "+types/*": [
        "./.react-router/types/src/routes/+types/*"
      ],
      "widgets/*": [
        "./src/widgets/*"
      ],
      "features/*": [
        "./src/features/*"
      ],
      "shared/*": [
        "./src/shared/*"
      ],
      "app/*": [
        "./src/app/*"
      ],
      "entities/*": [
        "./src/entities/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}